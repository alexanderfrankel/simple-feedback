<h1>Give me a spot feedback</h1>

<% if !Array(flash[:alert]).empty? %>
  <ul>
  <% Array(flash[:alert]).each do |err| %>
    <li><%= err %></li>
  <% end %>
  </ul>
<% end %>

<div id="preview" style="border: solid 1px red; position: absolute; top: 50%; right: 5px; width: 40%">
  <p></p>
</div>

<%= form_for @feedback do |f| %>
  <%= f.label :author %><br>
  <%= f.text_field :author %><p style="display:inline"><em>(optional)</em></p><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %>

  <%= f.label :rating %><br>
  <%= f.select :rating, *[1..5] %><span><em>5 is the best!</em></span><br>

  <%= f.submit %>
<% end %>
